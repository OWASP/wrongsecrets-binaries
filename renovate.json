{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "reviewers": ["commjoen", "bendehaan"],
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group all Rust dependencies",
      "matchManagers": ["cargo"],
      "groupName": "Rust dependencies"
    },
    {
      "description": "Group all Go dependencies",
      "matchManagers": ["gomod"],
      "groupName": "Go dependencies"
    },
    {
      "description": "Group all .NET dependencies",
      "matchManagers": ["nuget"],
      "groupName": ".NET dependencies"
    },
    {
      "description": "Group all Swift dependencies",
      "matchManagers": ["swift"],
      "groupName": "Swift dependencies"
    },
    {
      "description": "Group all GitHub Actions dependencies",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    }
  ],
  "cargo": {
    "enabled": true,
    "fileMatch": ["(^|/)rust/Cargo\\.toml$"]
  },
  "gomod": {
    "enabled": true,
    "fileMatch": ["(^|/)golang/go\\.mod$"]
  },
  "nuget": {
    "enabled": true,
    "fileMatch": ["(^|/)dotnet/.+\\.csproj$", "(^|/)wrongsecrets-binaries\\.sln$"]
  },
  "swift": {
    "enabled": true,
    "fileMatch": ["(^|/)swift/Package\\.swift$"]
  },
  "github-actions": {
    "enabled": true
  }
}
